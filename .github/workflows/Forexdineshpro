  <footer>
    <p>¬© 2025 Dinesh Forex | Contact: info@dineshforex.com</p>
  </footer>

  <script>
    // --- Currency Data in INR ---
    let currencies = [
      { id: 1, name: "US Dollar (USD)", rate: 83.10, image: "https://flagcdn.com/us.svg" },
      { id: 2, name: "Euro (EUR)", rate: 90.20, image: "https://flagcdn.com/eu.svg" },
      { id: 3, name: "Japanese Yen (JPY)", rate: 0.55, image: "https://flagcdn.com/jp.svg" },
      { id: 4, name: "British Pound (GBP)", rate: 106.45, image: "https://flagcdn.com/gb.svg" },
      { id: 5, name: "Australian Dollar (AUD)", rate: 55.60, image: "https://flagcdn.com/au.svg" },
      { id: 6, name: "Canadian Dollar (CAD)", rate: 61.30, image: "https://flagcdn.com/ca.svg" },
      { id: 7, name: "Singapore Dollar (SGD)", rate: 62.80, image: "https://flagcdn.com/sg.svg" },
      { id: 8, name: "UAE Dirham (AED)", rate: 22.60, image: "https://flagcdn.com/ae.svg" },
      { id: 9, name: "Swiss Franc (CHF)", rate: 94.70, image: "https://flagcdn.com/ch.svg" },
      { id: 10, name: "Chinese Yuan (CNY)", rate: 11.40, image: "https://flagcdn.com/cn.svg" }
    ];

    let cart = [];

    // --- Show Currencies ---
    function showCurrencies() {
      const content = document.getElementById("content");
      content.innerHTML = "";
      currencies.forEach(cur => {
        const card = document.createElement("div");
        card.className = "currency-card";
        card.innerHTML = `
          <img src="${cur.image}" alt="${cur.name}">
          <h3>${cur.name}</h3>
          <p>üí∞ Rate: ‚Çπ${cur.rate.toFixed(2)} per 1 unit</p>
          <input type="number" id="amount-${cur.id}" class="input-box" placeholder="Enter INR amount">
          <button class="btn" onclick="convertCurrency(${cur.id})">Convert</button>
          <button class="btn" onclick="addToCart(${cur.id})">Add to Cart</button>
          <button class="btn" style="background:#dc3545" onclick="deleteCurrency(${cur.id})">Delete</button>
          <p id="result-${cur.id}" style="margin-top:5px;color:#28a745;font-weight:600;"></p>
        `;
        content.appendChild(card);
      });
    }

    // --- Convert INR to foreign currency ---
    function convertCurrency(id) {
      const currency = currencies.find(c => c.id === id);
      const amountInINR = document.getElementById(`amount-${id}`).value;
      const resultEl = document.getElementById(`result-${id}`);
      if (!amountInINR || amountInINR <= 0) {
        resultEl.textContent = "Please enter a valid amount.";
        resultEl.style.color = "red";
        return;
      }
      const converted = amountInINR / currency.rate;
      resultEl.style.color = "#28a745";
      resultEl.textContent = `You get ${converted.toFixed(2)} ${currency.name}`;
    }

    // --- Add to Cart ---
    function addToCart(id) {
      const currency = currencies.find(c => c.id === id);
      cart.push(currency);
      alert(`${currency.name} added to your bill!`);
    }

    // --- Show Cart / Bill ---
    function showCart() {
      const content = document.getElementById("content");
      content.innerHTML = "<h2>Your Bill</h2>";
      const cartDiv = document.createElement("div");
      cartDiv.className = "cart";

      if (cart.length === 0) {
        cartDiv.innerHTML = "<p>Your cart is empty üõí</p>";
      } else {
        let total = 0;
        cart.forEach(item => {
          total += item.rate;
          cartDiv.innerHTML += `
            <div class="cart-item">
              <span>${item.name}</span>
              <span>‚Çπ${item.rate.toFixed(2)}</span>
            </div>
          `;
        });
        cartDiv.innerHTML += `<h3 style="text-align:right;margin-top:10px;">Total: ‚Çπ${total.toFixed(2)}</h3>`;
      }

      content.appendChild(cartDiv);
    }

    // --- Delete Currency ---
    function deleteCurrency(id) {
      currencies = currencies.filter(c => c.id !== id);
      showCurrencies();
    }

    // --- Contact Info ---
    function showContact() {
      const content = document.getElementById("content");
      content.innerHTML = `
        <div class="cart">
          <h2>Contact Us</h2>
          <p>üìß Email: <strong>info@dineshforex.com</strong></p>
          <p>üìû Phone: <strong>+91 97890 65891</strong></p>
          <p>üè¢ Address: <strong>No. 5, Chromepet, Chennai, India</strong></p>
        </div>
      `;
    }

    // --- Load Default ---
    showCurrencies();
  </script>
</body>
